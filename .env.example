# Server Configuration
PORT=10000

# OpenRouter API (for AI analysis)
# Get your API key from: https://openrouter.ai/
API_KEY=your_openrouter_api_key_here

# Telegram Bot Configuration (optional)
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# CryptoPanic API (optional - for news features)
# Get your API key from: https://cryptopanic.com/developers/api/
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# CoinGecko API Rate Limiting
# Delay between API calls in milliseconds (default: 1000ms)
CG_DELAY_MS=1000

# Background News Filter Job (saves ~$300-600/month in AI costs)
# Uses OpenRouter free tier model (google/gemini-flash-1.5) with same API_KEY
NEWS_FILTER_ENABLED=true
NEWS_FILTER_INTERVAL_MINUTES=30
